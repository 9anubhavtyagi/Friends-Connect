<!-- header partial -->

<header id="layout-header">
    <h2 id="layout-heading"> Friends-Connect | Header Layout </h2>

    <ul id="layout-header-content-list">
        <% if (locals.user){ %>
            <li> <%= user.name %> </li>
            <li>
                <a href="/user/sign-out"> Sign Out </a>
            </li>

        <% }else{ %>
            <li>
                <a href="/user/sign-in"> Sign In </a>
            </li>

            <li>
                <a href="/user/sign-up"> Sign Up </a>
            </li>

        <% } %>
    </ul>
</header>